{% sw_extends '@Storefront/storefront/component/listing/filter-panel.html.twig' %}

{% block component_filter_panel_item_price %}
{% endblock %}
  {% block component_filter_panel_item_rating_select %}
  {% endblock %}
{% block component_filter_panel_item_shipping_free %}
{% endblock %}

{% block component_filter_panel_items %}

  {% set sortingCollapseId = 'filter-sorting' %}

  <div class="filter-multi-select filter-panel-item d-grid bohem-filter-sorting"
       role="listitem"
       data-bohem-sorting-panel="true"
       data-bohem-sorting-collapse-id="{{ sortingCollapseId }}"
       data-bohem-sorting-label="{{ 'general.sortingLabel'|trans|striptags }}">

    <button class="filter-panel-item-toggle btn collapsed"
            aria-expanded="false"
            aria-label="{{ 'general.sortingLabel'|trans|striptags }}"
            data-bs-toggle="collapse"
            data-bs-target="#{{ sortingCollapseId }}">
      {{ 'general.sortingLabel'|trans|striptags }}

      <span class="filter-multi-select-count"></span>

      {% sw_icon 'arrow-medium-down' style {
        'pack': 'solid', 'size': 'xs', 'class': 'filter-panel-item-toggle'
      } %}
    </button>

    <div class="filter-multi-select-dropdown filter-panel-item-dropdown collapse"
         id="{{ sortingCollapseId }}">
      <ul class="filter-multi-select-list"
          aria-label="{{ 'general.sortingLabel'|trans|striptags }}"
          data-bohem-sorting-radios>
      </ul>

      <template data-bohem-sorting-radio-tpl>
        <li class="filter-multi-select-list-item">
          <div class="form-check">
            <input type="radio"
                   class="form-check-input"
                   name="bohem-sorting"
                   value=""
                   id="">
            <label class="filter-multi-select-item-label form-check-label"
                   for="">
            </label>
          </div>
        </li>
      </template>
    </div>
  </div>

  {{ parent() }}
{% endblock %}
